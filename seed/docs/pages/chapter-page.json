{
    "meta": {
        "model": "chapters"
    },

    "areas": [
        {
            "name": "sidebar",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "schemaless",
                            "match": {
                                "name": "social-toolbar"
                            },
                            "return": "social-toolbar"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/social-toolbar"
                    }
                },
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "/#{context.model_name}slug/#{context.slug}",
                            "return": "toc-document"
                        },
                        {
                            "type": "post-processor",
                            "processor" : "SoupCMS::Core::Processor::NokogiriTOC",
                            "config" : {
                                "toc_for" : "#{data['toc-document']['content']['value']}",
                                "levels" : ["h2","h3","h4", "h5", "h6"]
                            },
                            "return": "table-of-content"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/table-of-content"
                    }
                },
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "url": "posts/tag-cloud",
                            "return": "tag-cloud"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/tag-cloud"
                    }
                },
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "chapters",
                            "fields": ["title", "slug"],
                            "limit" : 100,
                            "return": "articles"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/list-view"
                    }
                }

            ]
        },
        {
            "name": "body",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "#{context.model_name}",
                            "match": {
                                "slug": "#{context.slug}"
                            },
                            "return": "document"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/article"
                    }
                }
            ]
        }
    ]


}