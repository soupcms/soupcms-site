{
    "meta": {
        "model": "posts"
    },

    "areas": [
        {
            "name": "body",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "#{context.model_name}",
                            "match": {
                                "slug": "#{context.slug}"
                            },
                            "return": "document"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/article"
                    }
                }
            ]
        }
    ]


}